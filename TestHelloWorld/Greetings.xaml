<Window x:Class="TestHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Greetings">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Height="78" Margin="0,58,0.4,0" TextWrapping="Wrap" Text="Wählen Sie eine Nachrichtenoption aus, und wählen Sie dann die Schaltfläche Anzeigen" VerticalAlignment="Top" Width="185"/>
        <RadioButton x:Name="RadioButton2" Content="Auf Wiedersehen" HorizontalAlignment="Left" Margin="346,182,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButton1" Content="Hello" HorizontalAlignment="Left" Margin="166,186,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Anzeigen" HorizontalAlignment="Left" Margin="242,254,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
